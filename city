def background():
    speed(150)
    penup()
    goto(-200,-100)
    pendown()
    color('skyblue')
    begin_fill()
    forward(400)
    left(90)
    forward(300)
    left(90)
    forward(400)
    left(90)
    forward(300)
    end_fill()
    color('green')
    begin_fill()
    forward(100)
    left(90)
    forward(400)
    left(90)
    forward(100)
    left(90)
    forward(400)
    left(90)
    end_fill()


def sun():
    speed(150)
    color('yellow')
    begin_fill()
    for i in range(18):
        forward(50)
        left(100)
    end_fill()

def house():
