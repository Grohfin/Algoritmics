def tree():
    speed(200)
    seth(0)
    color('darkgreen')
    begin_fill()
    for i in range(4):
        forward(50)
        left(90)
    end_fill()
    forward(23)
    begin_fill()
    color('brown')
    for i in range(2):
        forward(5)
        right(90)
        forward(50)
        right(90)
    end_fill()

def cloud():
    seth(0)
    begin_fill()
    color('white')
    circle(16)
    forward(17)
    circle(23)
    forward(17)
    circle(16)
    end_fill()
